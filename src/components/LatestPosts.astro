---
import PostCard from "./PostCard.astro";

// Placeholder data
const posts = [
  {
    title: "Demystifying Astro's Islands Architecture",
    imageUrl: "https://source.unsplash.com/random/600x400/?technology,space",
    description:
      "A thorough exploration of Astro's unique Islands architecture, how it boosts performance by minimizing JavaScript, and practical use cases for modern web development.",
    tags: ["astro", "performance", "webdev"],
    slug: "demystifying-astro-islands",
    date: new Date("2025-05-10"),
  },
  {
    title: "Getting Started with Tailwind CSS v4",
    imageUrl: "https://source.unsplash.com/random/600x400/?code,design",
    description:
      "An introductory guide to the latest features in Tailwind CSS v4. Learn how to set it up, leverage its new capabilities, and streamline your styling workflow.",
    tags: ["tailwindcss", "css", "frontend"],
    slug: "getting-started-tailwindcss-v4",
    date: new Date("2025-04-22"),
  },
  {
    title: "Advanced TypeScript Patterns for Robust Apps",
    imageUrl: "https://source.unsplash.com/random/600x400/?abstract,typescript",
    description:
      "Dive into advanced TypeScript patterns, including utility types, conditional types, and decorators, to build more maintainable and error-free applications.",
    tags: ["typescript", "javascript", "architecture"],
    slug: "advanced-typescript-patterns",
    date: new Date("2025-03-15"),
  },
];

interface Props {
  className?: string;
  id?: string;
}

const { className = "", id = "" } = Astro.props;
---

<section class:list={["py-16 md:py-24", className]} id={id}>
  <h2 class="text-4xl md:text-5xl font-headline text-center mb-12 md:mb-16">
    Latest Posts
  </h2>
  {
    posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <PostCard
            title={post.title}
            imageUrl={post.imageUrl}
            description={post.description}
            tags={post.tags}
            slug={post.slug}
            date={post.date}
          />
        ))}
      </div>
    ) : (
      <p class="text-center text-gray-400">No posts yet. Stay tuned!</p>
    )
  }
</section>
