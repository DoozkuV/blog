---
import {
  LINKEDIN_URL,
  GITHUB_URL,
  X_URL,
  INITIALS,
} from "../../utils/constants";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import XIcon from "../icons/XIcon.astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/projects", label: "Projects" },
  { href: "/posts", label: "Posts" },
];

const socialButtons = [
  {
    href: LINKEDIN_URL,
    label: "LinkedIn",
    icon: LinkedInIcon,
  },
  { href: GITHUB_URL, label: "GitHub", icon: GithubIcon },
  { href: X_URL, label: "X.com", icon: XIcon },
];

const { ...rest } = Astro.props;
const { class: extraClasses, ...props } = rest;
---

<header
  class:list={[
    "fixed top-0 left-0 right-0 z-40 py-3 px-4 sm:px-6 lg:px-8",
    "bg-opacity-80 backdrop-blur-md shadow-lg",
    "transition-all duration-300 ease-in-out",
    extraClasses,
  ]}
  {...props}
>
  <div class="container mx-auto flex justify-between items-center">
    <a
      href="/"
      class="text-xl sm:text-2xl font-headline hover:text-gray-600 transition-colors"
      >{INITIALS}</a
    >
    <nav class="flex items-center space-x-3 sm:space-x-4 md:space-x-6">
      {
        navLinks.map(({ href, label }) => (
          <a
            {href}
            id={href}
            class="font-headline uppercase tracking-wider text-xs sm:text-sm border-2 border-transparent hover:text-gray-600 px-3 py-1.5 sm:px-4 sm:py-2 transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 foucs:ring-accent focus:ring-opacity-70"
          >
            {label}
          </a>
        ))
      }
      <div
        class="flex items-center space-x-3 sm:space-x-4 pl-2 sm:pl-4 border-l border-r-gray-700"
      >
        {
          socialButtons.map((social) => (
            <a
              href={social.href}
              aria-label={social.label}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-gray-600 transition-colors duration-200"
            >
              <social.icon size={20} />
            </a>
          ))
        }
      </div>
    </nav>
  </div>
</header>
